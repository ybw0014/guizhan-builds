{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
  },
  "include": [
    "src/**/*"
  ]
}
